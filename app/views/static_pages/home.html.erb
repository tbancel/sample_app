<% if signed_in?%>
	<div class="row">
		<aside class="span4">
			<section>
				<%= render 'shared/user_info'%>
			</section>
			<section>
				<%= render 'shared/stats'%>
			</section>
			<section>
				<%= render 'shared/micropost_form'%>
			</section>
		</aside>
		<div class="span8">
			<h3>Micropost Feed</h3>
			<%= render 'shared/feed'%>
		</div>
	</div>	

<% else%>
	<div class="center hero-unit">
		<h1>Welcome to the Sample App</h1>

		<h2>
			This is the home page for the Twitter APP - Check it out
		</h2>	
		
		<p>In this app, you can create an account, login/logout, tweet things, follow other users</p>

	<hr>

		<%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
	</div>

<% end %>
